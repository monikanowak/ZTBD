extends layout

block content
	a(href="/users") Back To Users
	h1 User Info
	ul
		li Name: 
			strong #{full_name}
		li Username: 
			strong #{username}
		li Email Address: 
			strong #{email}
	div#actions
		a(href="/edituser/#{username}") 
			button.mybut(type="button") Edit User
		a(class="deleteuser" data-user="#{username}") 
			button.mybut(type="button") Delete 
